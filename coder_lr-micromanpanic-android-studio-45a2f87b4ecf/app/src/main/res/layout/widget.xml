<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Panic Alarm"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bPanico"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/boton_panico_background" />

    <TextView
        android:id="@+id/tvTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bPanico"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:text="ENVIAR ALERTA"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/negro_fondo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTexto"
        android:layout_marginTop="-8dp"
        android:background="@color/colorAccent"
        android:gravity="right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvTexto"
            android:layout_marginEnd="25dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/boton_gps_background" />

        <TextView
            android:id="@+id/txt_estado_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/cardview_light_background"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>